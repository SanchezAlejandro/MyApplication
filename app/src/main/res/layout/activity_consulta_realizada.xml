<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultaRealizada">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RelativeLayoutTodoConsultaRealizada"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayoutFechaR"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:id="@+id/LineaarLayoutFechaConsultaR"
                    android:background="@drawable/fondo_boton_ok_color"
                    android:layout_margin="4dp"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/calendario"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" Fecha:  "
                        android:textSize="18dp"
                        android:textColor="@color/blanco"
                        />

                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EditTextFechaConsultaR"
                    android:hint="AAAA/MM/DD"
                    android:textSize="18dp"
                    android:enabled="false"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:id="@+id/LineaarLayoutHoraConsultaR"
                    android:background="@drawable/fondo_boton_ok_color"
                    android:layout_margin="4dp"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/reloj"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" Hora:    "
                        android:textSize="18dp"
                        android:textColor="@color/blanco"
                        />

                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EditTextHoraConsultaR"
                    android:hint="00:00"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:id="@+id/RelativeLayoutConScroll"
            android:layout_below="@+id/LinearLayoutFechaR"
            android:layout_margin="8dp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:id="@+id/RelativeLayoutConDescripcionDeTarea"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/EditTextDescripcionConsultaR"
                        android:hint="Escribe aquÃ­"
                        android:enabled="false"
                        />

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>